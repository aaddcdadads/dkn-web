#!/bin/bash

# 应用后端部署

# 文件夹基础目录
base_dir={{workdir}}

# 应用web仓库文件夹名称
target_dir={{targetDir}}

cd $base_dir/$target_dir

# 提交应用web仓库代码
echo "===> 1.提交应用仓库代码 start"
git pull --quiet
git add . --quiet
git commit -m "init repo" --quiet
git push --quiet
echo "===> 1.提交应用仓库代码 success"


#部署服务
echo "===> 2.部署服务 start"
pwd
./deploy.sh
echo "===> 2.部署服务 success"